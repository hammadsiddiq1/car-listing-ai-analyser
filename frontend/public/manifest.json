{
  "manifest_version": 3,
  "name": "Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension built with React, TSX, and Vite",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "declarativeContent"
  ],
  "host_permissions": ["*://*.autotrader.co.uk/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.autotrader.co.uk/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
